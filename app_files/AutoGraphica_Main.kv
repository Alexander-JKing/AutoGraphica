                on_release: if nav_rail.disabled is False: app.change_nav_screen("MultiLine") 

            MDNavigationRailItem:
                id: multi_scatter
                text: "Multi Scatter Plot"
                # icon: "C:/Users/aking/OneDrive - SEAI/Documents/Work/Learning/packages/KivyMD/AutoGraphica_v1/images/multi_scatter_plot.png"
