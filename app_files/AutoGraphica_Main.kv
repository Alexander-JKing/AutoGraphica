<HomePage>

    name: "Home"
    
    FitImage:
        # source: r"C:\Users\aking\OneDrive - SEAI\Documents\Work\Learning\packages\KivyMD\AutoGraphica_v1\images\home_page_design.jpg"
        source: app.resource_path("images/home_page_design.jpg")

    MDBoxLayout:
        orientation: "horizontal"
        # Set the size of this BoxLayout widget so that its not scrunched up in the corner of the display like it is as runtime.
        size: root.width, root.height
        

        MDNavigationRail:
            id: nav_rail
            size: 150, root.height
            use_action_button: False
            active: True
            current_selected_item: 0
            disabled: True

            # Hack, since we can't seem to turn the selected outline off, we can just change the background color of it to match the background color of the app.
            selected_color_background: "#FFFFFF"

            # To show that a new item is being selected, we can add a ripple effect/color that pops up
            ripple_color_item: "#e7e4c0"


            MDNavigationRailItem:
                id: line
                text: "Line Graph"
                # icon: "C:/Users/aking/OneDrive - SEAI/Documents/Work/Learning/packages/KivyMD/AutoGraphica_v1/images/line_chart.png"
                icon: app.resource_path("images/line_chart.png")
                
                on_release: 
                    if nav_rail.disabled is False: app.change_nav_screen("Line") 
  


            MDNavigationRailItem:
                id: scatter
                text: "Scatter Plot"
                # icon: "C:/Users/aking/OneDrive - SEAI/Documents/Work/Learning/packages/KivyMD/AutoGraphica_v1/images/scatter_plot.png"
                icon: app.resource_path("images/scatter_plot.png")
                
                on_release: if nav_rail.disabled is False: app.change_nav_screen("Scatter") 


            MDNavigationRailItem:
                id: bar
                text: "Bar Chart"
                # icon: "C:/Users/aking/OneDrive - SEAI/Documents/Work/Learning/packages/KivyMD/AutoGraphica_v1/images/bar_chart.png"
                icon: app.resource_path("images/bar_chart.png")
                
                on_release: if nav_rail.disabled is False: app.change_nav_screen("Bar") 

            MDNavigationRailItem:
                id: box
                text: "Box Plot"
                # icon: "C:/Users/aking/OneDrive - SEAI/Documents/Work/Learning/packages/KivyMD/AutoGraphica_v1/images/box_plot.png"
                icon: app.resource_path("images/box_plot.png")
                
                on_release: if nav_rail.disabled is False: app.change_nav_screen("Box") 

            MDNavigationRailItem:
                id: pie
                text: "Pie Chart"
                # icon: "C:/Users/aking/OneDrive - SEAI/Documents/Work/Learning/packages/KivyMD/AutoGraphica_v1/images/pie_chart.png"
                icon: app.resource_path("images/pie_chart.png")
                
                on_release: if nav_rail.disabled is False: app.change_nav_screen("Pie") 

            MDNavigationRailItem:
